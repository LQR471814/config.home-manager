{ pkgs ? import <nixpkgs> {}, ... }:

pkgs.stdenv.mkDerivation {
  name = "dwm";

  src = pkgs.fetchFromGitHub {
    owner = "LQR471814";
    repo = "dwm";
    rev = "bf263dd00063c392156a263486caf45e09ff3bec";
    hash = "sha256-NIg0Cx6Yz3CQBpxH3nVDH9VlUlv1y+ud6j7y/7bcSa4=";
  };

  prePatch = ''
    sed -i "s@/usr/local@$out@" config.mk
